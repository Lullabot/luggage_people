// Adding support to discover template files
/**
 * Implements hook_theme_registry_alter()
 **/
function people_theme_registry_alter(&$theme_registry) {
  $mod_path = drupal_get_path('module', 'luggage_people');
  $theme_registry_copy = $theme_registry;       // munge on a copy
  _theme_process_registry($theme_registry_copy, 'phptemplate', 'theme_engine', 'pow', $mod_path);
  $theme_registry += array_diff_key($theme_registry_copy, $theme_registry);
  $hooks = array('node');
  foreach ($hooks as $h) {
    _luggage_people_insert_after_first_element($theme_registry[$h]['theme paths'], $mod_path);
  }
}

/**
 * Helper function for re-ordering arrays (needed by theme_registry_alter)
 */
function _luggage_people_insert_after_first_element(&$a, $element) {
  if(is_array($a)) {
    $first_element = array_shift($a);
    array_unshift($a, $first_element, $element);
  }
}

/**
 * Implements hook_pubcookie_post_register()
 * Called just after successful pubcookie login for the first time.
 */
function luggage_people_pubcookie_post_register($variables) {
  global $user;
  $pubcookie_user = $variables['pubcookie_user'];
  $records = pubcookie_ldap_search($variables['pubcookie_user']);
  if (!isset($records[0])) {
    watchdog('luggage_people', 'No LDAP record found to change ownership');
    return;
  } 
  else {
    $record = $records[0];
  }
  // Assign role faculty | staff | affiliate | student
  if ($role = user_role_load_by_name($record['userclass'])) {
    user_multiple_role_edit(array($user->uid), 'add_role', $role->rid);
  }
  
  // Bail out if no node of type 'people' exists.
  $node_type_names = node_type_get_names();
  if (!isset($node_type_names['people'])) {
    return;
  }

  // Find existing People content that has this user's email attached to it.
  $query = new EntityFieldQuery();
  $nids = $query->entityCondition('entity_type', 'node')
    ->entityCondition('bundle', 'people')
    ->fieldCondition('field_people_email', 'email', $variables['pubcookie_user'], 'STARTS_WITH')
    ->execute();

  if ($nids) {
    foreach ($nids['node'] as $node_info) {
      $node = node_load($node_info->nid);
      $node->uid = $user->uid;
      watchdog('luggage_people', 'Assigned ownership of node %nid to %name', array('%nid' => $node->nid, '%name' => $user->name));
      node_save($node);
    }
  }
  else {
    // If not found, create new People node using LDAP info.
    $node = new stdClass();
    $node->type = 'people';
    node_object_prepare($node);
    $node->language = LANGUAGE_NONE;

    // Remove [DEPT] from title
    $pos = strpos($record['title'], '[');
    $title_only = drupal_substr($record['title'], 0, $pos);

    $node->title = $record['givenname'] . ' ' . $record['sn'];
    $node->field_people_first_name[LANGUAGE_NONE][0]['value'] = $record['givenname'];
    $node->field_people_middle_initial[LANGUAGE_NONE][0]['value'] = $record['isupersonmiddleinitial'];
    $node->field_people_last_name[LANGUAGE_NONE][0]['value'] = $record['sn'];
    $node->field_people_position[LANGUAGE_NONE][0]['value'] = rtrim($title_only);

    //street
    $node->field_people_email[LANGUAGE_NONE][0]['email'] = $record['mail'];
    $node->field_people_street[LANGUAGE_NONE][0]['value'] = $record['street'];
    $node->field_people_city[LANGUAGE_NONE][0]['value'] = $record['l'];
    $node->field_people_state[LANGUAGE_NONE][0]['value'] = $record['st'];
    $node->field_people_postal[LANGUAGE_NONE][0]['value'] = $record['postalcode'];

    $node->field_people_phone[LANGUAGE_NONE][0]['value'] = $record['telephonenumber'];

    //image
    $node->field_people_image[LANGUAGE_NONE][0]['alt'] = 'Profile picture of ' . $node->title;
    $node->field_people_image[LANGUAGE_NONE][0]['title'] = $node->title;

    $node->path['pathauto'] = TRUE;

    watchdog('luggage_people', 'Creating profile for %name', array('%name' => $user->name));

    // Create new People node for this pubcookie user.
    node_save($node);
  }
}

function luggage_people_form_people_node_form_alter(&$form, &$form_state) {
  if(arg(2) == 'edit') {

    ////////////////////// SET PLACEHOLDER TEXT //////////////////////////////////////////////////////////
    // Name
    $form['field_people_first_name'][LANGUAGE_NONE][0]['value']['#attributes']['placeholder'] = 'John';
    $form['field_people_middle_initial'][LANGUAGE_NONE][0]['value']['#attributes']['placeholder'] = 'J';
    $form['field_people_last_name'][LANGUAGE_NONE][0]['value']['#attributes']['placeholder'] = 'Doe';
    // Tags placeholder text
    $form['field_tags'][LANGUAGE_NONE]['#attributes']['placeholder'] = 'interest, interest two, interest 3';
    // Position
    $i = 0;
    while(isset($form['field_people_position'][LANGUAGE_NONE][$i])) {
      $form['field_people_position'][LANGUAGE_NONE][$i]['value']['#attributes']['placeholder'] = 'Professor';
      $i++;
    }
    // Area of Expertise
    $form['field_people_expertise'][LANGUAGE_NONE]['#attributes']['placeholder'] = 'Insect Virology';
    // Other Affiliations
    $form['field_people_affiliation'][LANGUAGE_NONE]['#after_build'][] = 'people_node_form_field_people_affiliation_after_build';
    // Profile image
    $form['field_people_image'][LANGUAGE_NONE]['#after_build'][] = 'people_node_form_alter_after_build';
    // Education
    $i = 0;
    while(isset($form['field_people_education'][LANGUAGE_NONE][$i])) {
      $form['field_people_education'][LANGUAGE_NONE][$i]['value']['#attributes']['placeholder'] = 'Ph.D., Molecular Biology, Iowa State University';
      $i++;
    }

    $name = $form['title']['#default_value'];
    if($form['field_people_image'][LANGUAGE_NONE][0]['#default_value']['alt'] == '')
      $form['field_people_image'][LANGUAGE_NONE][0]['#default_value']['alt'] = 'This is a profile picture of ' . $name;
    if($form['field_people_image'][LANGUAGE_NONE][0]['#default_value']['title'] == '')
      $form['field_people_image'][LANGUAGE_NONE][0]['#default_value']['title'] = $name;
  }
}

function people_node_form_field_people_affiliation_after_build($element, &$form_state) {
  $i = 0;
  while(isset($element[$i])) {
    $element[$i]['url']['#attributes']['placeholder'] = 'http://otheruniversity.edu/dept';
    $element[$i]['title']['#attributes']['placeholder'] = 'Collaborating Professor';
    $i++;
  }
  return $element;
}

function people_node_form_alter_after_build($element, &$form_state) {
  $element[0]['alt']['#attributes']['placeholder'] = 'Profile picture of ' . $form_state['node']->title;
  $element[0]['title']['#attributes']['placeholder'] = $form_state['node']->title;
  return $element;
}
